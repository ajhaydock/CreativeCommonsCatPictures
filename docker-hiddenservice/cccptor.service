[Unit]
Description=creativecommonscatpictures.com Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker stop cccptor
ExecStartPre=-/usr/bin/docker rm cccptor
ExecStartPre=-/usr/bin/docker pull ajhaydock/cccp:tor
ExecStart=docker run --cap-drop=all --name cccptor -d -v /home/cats/hiddenservice:/var/lib/tor/hiddenservice:ro ajhaydock/cccp:tor
ExecStop=/usr/bin/docker stop cccptor

[Install]
WantedBy=multi-user.target
